{
  "name": "opticks-cli",
  "version": "1.0.0",
  "description": "The Opticks Command Line Interface",
  "main": "dist/index.mjs",
  "bin": "dist/index.mjs",
  "engines": {
    "node": "20.8.0"
  },
  "license": "ISC",
  "author": "Dale French",
  "scripts": {
    "build": "tsup",
    "build:watch": "nodemon --watch src -e ts --exec \"yarn build\"",
