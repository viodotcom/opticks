    "release": "npm run prepare && npx changeset publish",
    "changeset": "npx changeset"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "enquirer": "^2.4.1",
    "jscodeshift": "^0.15.1",
    "read-pkg": "^9.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  }
}
